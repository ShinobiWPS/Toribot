{
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": false,
  "python.envFile": "${workspaceFolder}/.env",
  "editor.insertSpaces": false,
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX", "todo"],
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "python.formatting.provider": "yapf",
  "python.formatting.yapfArgs": [
    "--style={based_on_style: pep8, COLUMN_LIMIT=80, SPLIT_BEFORE_DOT=true,DEDENT_CLOSING_BRACKETS=true,COALESCE_BRACKETS=true,USE_TABS=TRUE,CONTINUATION_ALIGN_STYLE=tabs}"
  ],
  "files.exclude": {
    "**/__pycache__": true,
    "**/env": true
  }
}
